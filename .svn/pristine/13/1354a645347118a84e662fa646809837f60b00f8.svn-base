.index-container{
	width: 100%;
	height: 100%;
	position: relative;
	background-image: url(../imgs/bg_index.png);
}
.index-background{
	width: 100%;
	height: 100%;
	position: relative;
	background-image: url(../imgs/indexbg.png);
}

.bg-index{
	position: absolute;
	right: 0;
	bottom: 0;
	width: 66%;
	height: 100%;
	border-left: 1px solid #ccc;
	background-image: url(../imgs/bg_index.png);
	background-size: 100% 100%;
}
.txt-index{
	position: absolute;
	left: 0;
	bottom: 0;
	width: 50%;
	height: 100%;
	padding-left: 60px;
	display: flex;
	flex-direction: column;
	justify-content: center;
}
.txt-index h1{
	font-size: 40px;
	letter-spacing: 2px;
}
.txt-index h1 span{
	padding-left: 20px;
	font-size: 16px;
	color: #666;
}
.txt-index p{
	padding: 30px 0;
	line-height: 30px;
	color: rgba(0,0,0,.45);
}